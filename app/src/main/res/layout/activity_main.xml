<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.todddavies.components.progressbar.ProgressWheel
        android:id="@+id/pwHabitProgress"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        ProgressWheel:text="@string/default_time"
        ProgressWheel:textColor="#222"
        ProgressWheel:textSize="18sp"
        ProgressWheel:rimColor="@color/timer_background"
        ProgressWheel:rimWidth="12dp"
        ProgressWheel:barColor="@color/timer_primary"
        ProgressWheel:barWidth="11dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
